<h2>Update Your Account</h2>

<h4>You must enter your password to make any account changes.</h4>

<% if @user && @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |error|%>
    <li class="danger"><%= error %></li>
  <% end %>
  </ul>

<% end %>


<form action="/users/<%= @user.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name:</label>
  <input type="text" name="name" value="<%= @user.name %>">

  <label for="email">Email:</label>
  <input type="email" name="email" value="<%= @user.email %>">

  <label for="username">Username:</label>
  <input type="text" name="username" value="<%= @user.username %>"><br><br>

  <label for="password">Enter your current password to make account changes:</label>
  <input type="password" name="password" id="password" placeholder="Current password"><br><br>
  <label for="new_password">New Password:</label>
  <input type="password" name="new_password" id="password" placeholder="New password"><br><br>
  <label for="new_password_confirmation">Confirm New Password:</label>
  <input type="password" name="new_password_confirmation" id="password" placeholder="Confirm new password"><br><br>

  <input class="button" type="submit" value="Update">
</form>

