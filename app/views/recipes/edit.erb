<h2>Create New Recipe</h2>

<form action="/recipes/<%= @recipe.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <label for="name">Recipe Name:</label>
  <input type="text" name="name" value="<%= @recipe.name %>" required><br>
  <br><br>
  <label for="serving_size">Serving Size:</label>
  <input type="text" name="serving_size" value="<%= @recipe.serving_size %>" required>
  <br><br>
  <label for="cook_time">Cook Time:</label>  
  <input type="text" name="cook_time" value="<%= @recipe.cook_time %>" required>
  <br><br>
  <label for="ingredients">Ingredients: <strong>Separate each ingredient by a comma ( , )</strong></label><br>
  <br>
  <textarea name="ingredients" cols="30" rows="10" value="<%= @recipe.ingredients %>" required><%= @recipe.ingredients %></textarea>
  <br><br>
  <label for="instructions">Instructions: <strong>Separate each instruction by a period ( . )</strong></label>
  <br>
  <textarea name="instructions" cols="30" rows="10" value="<%= @recipe.instructions %>" required><%= @recipe.instructions %></textarea>
  <br><br>

  <input type="submit" value="Edit Recipe">

</form>
<br>


<form action="/recipes/<%= @recipe.slug %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete this Recipe">
</form><br>

